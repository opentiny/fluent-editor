{
  "name": "@opentiny/fluent-editor",
  "version": "3.18.3",
  "description": "A rich text editor based on Quill 2.0, which extends rich modules and formats on the basis of Quill. It's powerful and out-of-the-box.",
  "homepage": "https://opentiny.github.io/fluent-editor/",
  "keywords": [
    "editor",
    "rich-text-editor",
    "rich-text",
    "wysiwyg",
    "wysiwyg-editor",
    "quill",
    "opentiny",
    "fluent-editor"
  ],
  "author": "OpenTiny Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:opentiny/fluent-editor.git"
  },
  "bugs": {
    "url": "https://github.com/opentiny/fluent-editor/issues"
  },
  "main": "src/index.ts",
  "module": "src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "require": "./src/index.ts"
    },
    "./style.css": {
      "import": "./style.css",
      "require": "./style.css"
    }
  },
  "scripts": {
    "start": "vite build && vite",
    "dev": "vite",
    "build": "vite build && node scripts/pre-release.js",
    "test": "jest",
    "format": "prettier './{src,test}/**/*.{js,ts,tsx,vue}' --write"
  },
  
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.2",
    "@types/quill": "^2.0.9",
    "commander": "^6.2.0",
    "jest": "^26.6.3",
    "lodash-es": "^4.17.15",
    "prettier": "^2.3.0",
    "sass": "^1.47.0",
    "shelljs": "^0.8.4",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4",
    "vite": "^2.3.0"
  },
  "dependencies": {
    "highlight.js": "^10.2.0",
    "html2canvas": "^1.0.0-rc.7",
    "quill": "^2.0.0",
    "quill-delta": "^5.1.0"
  }
}